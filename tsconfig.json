{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@home":["src/*"]
        },
        "outDir": "./dist",
        "typeRoots": [
            "./src/interfaces/index.d.ts"
        ]
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "admin",
        "client",
        "node_modules",
    ]
}